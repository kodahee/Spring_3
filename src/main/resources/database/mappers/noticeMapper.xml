<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.lalalala.s3.notice.NoticeDAO">
	<select id="noticeList" parameterType="Pager" resultType="NoticeDTO">
		SELECT * FROM 
		(SELECT rownum R, N.*
		FROM (SELECT * FROM NOTICE WHERE NUM > 0 ORDER BY NUM desc) N)
		WHERE R BETWEEN #{startRow} AND #{lastRow}
	</select>
	
	<select id="noticeSelect" parameterType="NoticeDTO" resultType="NoticeDTO">
		SELECT * FROM NOTICE WHERE num = #{num}
	</select>
	
	<insert id="noticeInsert" parameterType="NoticeDTO">
		INSERT INTO notice values(notice_seq.nextval, #{name}, #{title}, #{contents}, sysdate, 0)
	</insert>
	
	<update id="noticeUpdate" parameterType="NoticeDTO">
		UPDATE notice SET title = #{title}, contents = #{contents}, regDate = SYSDATE WHERE num = #{num}
	</update>
	
	<delete id="noticeDelete" parameterType="NoticeDTO">
		DELETE FROM notice WHERE num = #{num}
	</delete>


</mapper>