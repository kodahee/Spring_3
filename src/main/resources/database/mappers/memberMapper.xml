<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.lalalala.s3.member.MemberDAO">

	<select id="memberSelect" parameterType="com.lalalala.s3.member.MemberDTO" resultType="com.lalalala.s3.member.MemberDTO">
		SELECT * FROM MEMBER WHERE ID=#{id}
	</select>

	<insert id="memberJoin" parameterType="com.lalalala.s3.member.MemberDTO">
		insert into member values(#{id}, #{pw}, #{name}, #{phone}, #{email})
	</insert>
	
	<select id="memberLogin" parameterType="com.lalalala.s3.member.MemberDTO" resultType="com.lalalala.s3.member.MemberDTO">
		SELECT * FROM MEMBER WHERE id=#{id} AND pw=#{pw}
	</select>
	
	<update id="memberUpdate" parameterType="com.lalalala.s3.member.MemberDTO">
		UPDATE MEMBER SET PW = #{pw}, NAME = #{name}, PHONE = #{phone}, EMAIL= #{email} WHERE ID = #{id}
	</update>
	
	<delete id="memberDelete" parameterType="com.lalalala.s3.member.MemberDTO">
		DELETE FROM MEMBER WHERE ID = #{id}
	</delete>
	
</mapper>